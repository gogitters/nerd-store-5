    <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new nerdy product:</h1>
            <% if @product && @product.errors.any? %>
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved: </h2>
              <ul>
                <% @product.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>
            <%= form_tag '/products', method: :post do %>
              <div>
                Name: <input type="text" name="name" value="<%= @product.name %>">
              </div>
              <div>
                Price: <input type="text" name="price" value="<%= @product.price %> ">
              </div>
              <div>Supplier:
                <select name="supplier_id">
                  <% @suppliers.each do |supplier| %>
                    <option value="<%= supplier.id %>"><%= supplier.name %></option>
                  <% end %>
                </select>
              </div>
              <div>
                Description: <input type="text" name="description" value="<%= @product.description %>"> 
              </div>
              <input type="submit" value="Process New Nerdiness">
            <% end %>
          </div>
        </div>
      </div>
    </section>
